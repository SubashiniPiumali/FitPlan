<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:gravity="bottom"
    android:padding="16dp"
    android:background="@drawable/slideimage"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/navMenuProfilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/logoimg" />

    <TextView
        android:id="@+id/navMenuProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subashini Piumali"
        android:textColor="#995c00"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/navMenuProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hewaihalages@student.douglascollege.ca"
        android:textColor="#995c00"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>